{
	"name": "@lesjoursfr/html-to-pdf",
	"version": "3.1.7",
	"description": "A library to generate PDF from HTML.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-pdf",
	"homepage": "https://github.com/lesjoursfr/html-to-pdf#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-pdf/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x"
	},
	"keywords": [
		"pdf",
		"generator",
		"html"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc && cp src/electron.js lib/electron.js",
		"test": "mocha"
	},
	"dependencies": {
		"electron": "^31.0.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.4.0",
		"@tsconfig/node20": "^20.1.4",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.14.2",
		"@types/yargs": "^17.0.32",
		"eslint": "^9.4.0",
		"eslint-config-prettier": "^9.1.0",
		"globals": "^15.4.0",
		"mocha": "^10.4.0",
		"prettier": "^3.3.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.0.0-alpha.30"
	},
	"packageManager": "yarn@4.3.0"
}
