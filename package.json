{
	"name": "@lesjoursfr/html-to-pdf",
	"version": "3.4.0",
	"description": "A library to generate PDF from HTML.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-pdf",
	"homepage": "https://github.com/lesjoursfr/html-to-pdf#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-pdf/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x || 24.x"
	},
	"keywords": [
		"pdf",
		"generator",
		"html"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc && cp src/electron.js lib/electron.js",
		"test": "mocha"
	},
	"dependencies": {
		"electron": "^37.2.6",
		"yargs": "^18.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@tsconfig/node20": "^20.1.6",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.17.1",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.3.0",
		"mocha": "^11.7.1",
		"prettier": "^3.6.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"packageManager": "yarn@4.9.2"
}
