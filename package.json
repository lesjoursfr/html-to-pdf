{
	"name": "@lesjoursfr/html-to-pdf",
	"version": "3.2.0",
	"description": "A library to generate PDF from HTML.",
	"license": "MIT",
	"repository": "lesjoursfr/html-to-pdf",
	"homepage": "https://github.com/lesjoursfr/html-to-pdf#readme",
	"bugs": {
		"url": "https://github.com/lesjoursfr/html-to-pdf/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": "20.x || 22.x || 24.x"
	},
	"keywords": [
		"pdf",
		"generator",
		"html"
	],
	"main": "./lib/index.js",
	"types": "./lib/index.d.ts",
	"files": [
		"lib/**/*",
		"src/**/*",
		"templates/**/*"
	],
	"scripts": {
		"freshlock": "rm -rf node_modules/ && rm .yarn/install-state.gz && rm yarn.lock && yarn",
		"check-lint": "eslint",
		"check-format": "prettier --check .",
		"check-tsc": "tsc --noEmit",
		"lint": "eslint --fix",
		"format": "prettier --write .",
		"build": "tsc && cp src/electron.js lib/electron.js",
		"test": "mocha"
	},
	"dependencies": {
		"electron": "^35.1.2",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.23.0",
		"@tsconfig/node20": "^20.1.5",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.13.14",
		"@types/yargs": "^17.0.33",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"globals": "^16.0.0",
		"mocha": "^11.1.0",
		"prettier": "^3.5.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.28.0"
	},
	"packageManager": "yarn@4.7.0"
}
